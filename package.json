{
  "name": "alpinewind",  "version": "1.0.0",
  "description": "A Wordpress theme implementing Tailwind CSS and Alpine JS, and removing jQuery once and for all.",
  "main": "index.js",
  "scripts": {
    "development": "windicss './templates/**/*.php' -o ./dist/windi.css | mix",
    "dev": "yarn run development",
    "prod": "yarn run production",
    "watch": "windicss './templates/**/*.php' -o ./dist/windi.css -d | mix watch",
    "hot": "windicss './templates/**/*.php' -o ./dist/windi.css -d | mix watch --hot",
    "production": "windicss './templates/**/*.php' -o ./dist/windi.css -m || mix --production",
    "postinstall": "yarn run dev"
 },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lukeraymonddowning/AlpineWind.git#AlpineWind"
  },
  "keywords": [
    "wordpress",
    "php",
    "windicss",
    "unocss",
    "alpinejs",
    "modern",
    "starter",
    "theme"
  ],
  "author": "Tommi Niemi",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lukeraymonddowning/AlpineWind/issues"
  },
  "homepage": "https://github.com/lukeraymonddowning/AlpineWind/tree/AlpineWind#readme",
  "dependencies": {
    "alpinejs": "^3.6.1"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "laravel-mix": "^6.0.39",
    "laravel-mix-webp": "^0.1.3",
    "windicss": "^3.2.1"
  }
}
